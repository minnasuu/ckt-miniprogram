/**index.wxss**/

page{
  background-color: var(--ckt-gray-0);
  height: 100%;
}
.idea-container{
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: #fff;
  position: relative;
  box-sizing: border-box;
}

.idea-header-filter-list{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  padding-inline: 20px;
  height: 44px;
  display: flex;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  z-index: 1;
}

/* 瀑布流列 */
.waterfall-column {
  width: 48%;
  display: flex;
  flex-direction: column;
  gap: 12px;
}

/* 瀑布流项目 */
.waterfall-item {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12px;
  padding-inline: 12px;
  padding-bottom: 16px;
  padding-top: 24px;
  background-color: var(--ckt-gray-1);
  border-radius: 12px;
  overflow: hidden;
}

/* 瀑布流图片 */
.waterfall-image {
  width: 100%;
  display: block;
  border-radius: 8px;
}

/* 瀑布流多图列表*/
.waterfall-image-list {
  position: relative;
  width: 60%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.more-images-text {
  font-size: 16px;
  color: #999999;
  font-weight: bold;
}

/* 调整图片项的样式，移除之前的top和left设置 */
.waterfall-image-item {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 8px;
  transform-origin: bottom center;
  transition: all 0.3s ease;
}

.image-empty{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: var(--ckt-gray-2);
  transform-origin: bottom center;
  border-radius: 8px;
}

.waterfall-image-item image{
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 8px;
}
/* 瀑布流标题 */
.waterfall-title {
  font-size: 14px;
  color: var(--ckt-gray-11);
  line-height: 22px;
  font-weight: bold;
}


.waterfall-scroll-view {
  width: 100%;
  flex: 1;
  height: 1%;
}
.waterfall-container{
  width: 100%;
  display: inline-flex;
  padding-inline: 10px;
  padding-bottom: 12px;
  justify-content: space-between;
  box-sizing: border-box;
}
/* 加载更多提示 */
.loading-more {
  text-align: center;
  padding: 10px 0;
  color: var(--ckt-gray-6);
  font-size: 12px;
}


/* 图片容器 */
.waterfall-container .image-container {
  width: 60%;
  position: relative;
  overflow: hidden;
}

/* 骨架屏 */
.skeleton-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, #f1f1f1 25%, #ededed 50%, #f1f1f1 75%);
  background-size: 200% 100%;
  animation: shimmer 1.5s infinite;
  border-radius: 8px;
}

@keyframes shimmer {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

/* 图片加载完成后的样式 */
.waterfall-image, .waterfall-image-item {
  transition: opacity 0.3s ease;
}

.image-loaded {
  z-index: 2;
}

.waterfall-item-tag{
  position: absolute;
  top: 4px;
  right: 4px;
  width: 20px;
  height: 20px;
  font-size: 10px;
  line-height: 20px;
  text-align: center;
  font-weight: bold;
  background-color: var(--ckt-gray-2);
  border-radius: 100%;
  color: var(--ckt-gray-6);
}

/* 详情预览窗口样式 */
.detail-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
}

.detail-modal.show {
  opacity: 1;
  pointer-events: auto;
}

.detail-content {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  gap: 12px;
  overflow-y: auto;
}

.detail-header {
  display: flex;
  flex-direction: column;
  gap: 4px;
  align-items: center;
  padding-inline: 10px;
  font-size: 14px;
  pointer-events: none;
  transition: opacity 0.2s linear;
}

.detail-title {
  font-size: 20px;
  font-weight: bold;
  color: var(--ckt-gray-12);
}

.detail-desc {
  font-size: 12px;
  line-height: 20px;
  color: var(--ckt-gray-8);
}

.close-btn {
  font-size: 28px;
  width: 40px;
  height: 40px;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
}

.detail-modal .image-container{
  position: relative;
  width: 100%;
  height: 70%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-inline: 10px;
  box-sizing: border-box;
}

.detail-swiper {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.detail-image{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border-radius: 8px;
  overflow: visible !important;
}

.detail-actions {
  display: flex;
  justify-content: space-between;
  padding-inline: 10px;
  margin-top: 12px;
  transition: opacity 0.2s linear;
}

.action-btn {
  appearance: none;
  padding: 0;
  border-radius: 20px;
  font-size: 14px;
  width: 20px;
  height: 20px;
}

.action-btn-center-list{
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12px;
}

.action-btn .icon{
  width: 100%;
  height: 100%;
  background-color: var(--ckt-gray-11);
}
