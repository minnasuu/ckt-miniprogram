.tab-bar {
  height: 48px;
  background: white;
  display: flex;
  align-items: center;
  padding-bottom: env(safe-area-inset-bottom);
}

.tab-bar-border {
  background-color: rgba(0, 0, 0, 0.1);
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1rpx;
  transform: scaleY(0.5);
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  position: relative;
  font-size: 24rpx;
  color: var(--ckt-gray-6);
}

.tab-bar-item.ckt{
  font-weight: 600;
}

.tab-bar-item.active {
  color: var(--ckt-gray-12);
  font-weight: 600;
  position: relative;
}