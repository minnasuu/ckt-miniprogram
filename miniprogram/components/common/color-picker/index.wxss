  /* 颜色显示区域 */
  .color-display {
    border-radius: 24rpx;
    border: 1px solid #ddd;
    box-shadow: 0 0 4rpx rgba(0, 0, 0, 0.1);
    cursor: pointer;
    color: var(--ckt-gray-0);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24rpx;
  }
  
  /* 禁用状态 */
  .color-display.disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }
  
  /* 遮罩层 */
  .mask {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1000;
  }
  
  /* 颜色面板容器 */
  .color-panel-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 1001;
  }
  
  /* 颜色面板 */
  .color-panel {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    background-color: #fff;
    border-radius: 20rpx 20rpx 0 0;
    padding: 30rpx;
    box-sizing: border-box;
    box-shadow: 0 -4rpx 10rpx rgba(0, 0, 0, 0.1);
    z-index: 1002;
  }
  
  /* 当前颜色预览 */
  .color-preview {
    display: flex;
    align-items: center;
    margin-bottom: 30rpx;
  }
  
  .color-preview-box {
    width: 60rpx;
    height: 60rpx;
    border-radius: 8rpx;
    border: 1px solid #ddd;
    margin-right: 20rpx;
  }
  
  .color-preview-text {
    font-size: 28rpx;
    color: #333;
  }
  
  /* 预设颜色 */
  .preset-colors {
    display: flex;
    flex-wrap: wrap;
    margin-bottom: 30rpx;
  }
  
  .preset-color {
    width: 60rpx;
    height: 60rpx;
    border-radius: 8rpx;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
    border: 1px solid #ddd;
    box-shadow: 0 0 4rpx rgba(0, 0, 0, 0.1);
  }
  
  /* 滑块容器 */
  .slider-container {
    margin-bottom: 30rpx;
  }
  
  .slider-label {
    font-size: 28rpx;
    color: #333;
    margin-bottom: 10rpx;
    display: block;
  }
  
  /* 色相滑块背景 */
  .hue-slider-bg {
    position: relative;
    height: 40rpx;
    border-radius: 20rpx;
    background: linear-gradient(to right, #FF0000, #FF7F00, #FFFF00, #00FF00, #00FFFF, #0000FF, #8B00FF, #FF0000);
    margin: 10rpx 0;
  }
  
  .hue-slider-bg slider {
    position: absolute;
    top: -10rpx;
    left: 0;
    width: 100%;
    margin: 0;
  }