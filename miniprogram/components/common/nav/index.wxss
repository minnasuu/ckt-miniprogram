.nav-list {
  width: 100%;
  height: 100%;
  display: flex;
  gap: 32rpx;
}

.nav-item {
  font-size: 28rpx;
  color: var(--ckt-gray-7);
  padding: 8rpx 0;
  position: relative;
  white-space: nowrap;
}

.nav-item.active {
  color: var(--ckt-gray-12);
  font-weight: bold;
  transition: color 0.2s linear;
}