.number-input-container {
  display: flex;
  align-items: center;
  border: 2rpx solid var(--ckt-gray-4);
  border-radius: 8px;
  width: 100%;
  height: 32px;
}

.btn {
  width: 32px;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18px;
  color: #333;
  background: var(--ckt-gray-2);
  cursor: pointer;
  user-select: none;
}

.btn.minus {
  border-right: 2rpx solid var(--ckt-gray-4);
  border-top-left-radius: 8px;
  border-bottom-left-radius: 8px;
}

.btn.plus {
  border-left: 2rpx solid var(--ckt-gray-4);
  border-top-right-radius: 8px;
  border-bottom-right-radius: 8px;
}

.btn.disabled {
  color: var(--ckt-gray-8);
  background: var(--ckt-gray-1);
  cursor: not-allowed;
  pointer-events: none;
}

.input {
  flex: 1;
  height: 100%;
  text-align: center;
  min-width: 0;
  border: none;
  outline: none;
  font-size: 14px;
  color: #333;
}