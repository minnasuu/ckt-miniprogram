.upload-box {
  background-color: var(--ckt-gray-1);
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 16rpx;
  overflow: hidden;
  box-sizing: border-box;
}

.upload-text {
  font-size: 28rpx;
  color: var(--ckt-gray-7);
}

.preview-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
}